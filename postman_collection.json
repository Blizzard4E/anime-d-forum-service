{
    "info": {
        "name": "Anime Forum API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000"
        }
    ],
    "item": [
        {
            "name": "Get Threads",
            "request": {
                "method": "GET",
                "url": "{{base_url}}/threads"
            }
        },
        {
            "name": "Get Posts by Thread ID",
            "request": {
                "method": "GET",
                "url": "{{base_url}}/posts/{{thread_id}}"
            }
        },
        {
            "name": "Register User",
            "request": {
                "method": "POST",
                "url": "{{base_url}}/register",
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "username",
                            "value": "testuser",
                            "type": "text"
                        },
                        {
                            "key": "password",
                            "value": "password123",
                            "type": "text"
                        },
                        {
                            "key": "profile_url",
                            "value": "https://example.com/profile.jpg",
                            "type": "text"
                        }
                    ]
                }
            }
        },
        {
            "name": "Login User",
            "request": {
                "method": "POST",
                "url": "{{base_url}}/login",
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "username",
                            "value": "testuser",
                            "type": "text"
                        },
                        {
                            "key": "password",
                            "value": "password123",
                            "type": "text"
                        }
                    ]
                }
            }
        },
        {
            "name": "Get User by Session",
            "request": {
                "method": "POST",
                "url": "{{base_url}}/user",
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "session_token",
                            "value": "{{session_token}}",
                            "type": "text"
                        }
                    ]
                }
            }
        },
        {
            "name": "Create Thread",
            "request": {
                "method": "POST",
                "url": "{{base_url}}/thread",
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "title",
                            "value": "New Anime Discussion",
                            "type": "text"
                        },
                        { "key": "author_id", "value": "1", "type": "text" },
                        { "key": "anime_id", "value": "101", "type": "text" }
                    ]
                }
            }
        },
        {
            "name": "Create Post",
            "request": {
                "method": "POST",
                "url": "{{base_url}}/post",
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "content",
                            "value": "This is a great anime!",
                            "type": "text"
                        },
                        { "key": "author_id", "value": "1", "type": "text" },
                        { "key": "thread_id", "value": "5", "type": "text" }
                    ]
                }
            }
        }
    ]
}
